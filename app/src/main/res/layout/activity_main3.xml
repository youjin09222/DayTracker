<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/day"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/robotobold"
        android:paddingTop="12dp"
        android:text="시간을 잘 관리하기"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/day2"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/robotobold"
        android:paddingTop="12dp"
        android:text="위해서는 어떻게 시간을"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/day" />

    <TextView
        android:id="@+id/day3"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/robotobold"
        android:paddingTop="12dp"
        android:text="보내고 있는지 체크해야 해요."
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/day2" />

    <TextView
        android:id="@+id/day4"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/robotobold"
        android:paddingTop="12dp"
        android:text="데이 트래커가 시간 관리의"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/day3" />

    <TextView
        android:id="@+id/day5"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/robotobold"
        android:paddingTop="12dp"
        android:text="시작을 도와드릴께요!"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/day4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="187dp"
        android:layout_height="469dp"
        app:srcCompat="@drawable/calec"
        tools:layout_editor_absoluteX="-74dp"
        tools:layout_editor_absoluteY="180dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="185dp"
        android:layout_height="468dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/check"
        tools:layout_editor_absoluteY="180dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="184dp"
        android:layout_height="470dp"
        app:srcCompat="@drawable/clock"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="180dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/box_background5"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteY="560dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:gravity="center"
        android:background="@drawable/box_background4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button3"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/box_background2"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/montserratsubrayadabold"
        android:scaleType="fitCenter"
        android:text="다음"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="610dp" />


</androidx.constraintlayout.widget.ConstraintLayout>