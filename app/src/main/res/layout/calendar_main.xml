<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".CalendarActivity">

<ImageButton
    android:id="@+id/back_Btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:backgroundTint="#FFFFFF"
    app:layout_constraintEnd_toStartOf="@+id/textView3"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="25dp"
    android:fontFamily="@font/roboto_bold"
    android:text="Calendar"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ImageButton
    android:id="@+id/menu_Btn"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_gravity="right"
    android:layout_marginTop="20dp"
    android:backgroundTint="#FFFFFF"
    android:baselineAligned="false"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toEndOf="@+id/textView3"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_baseline_menu_24" />

<CalendarView
    android:id="@+id/calendarView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView3" />

<View
    android:id="@+id/view2"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginBottom="28dp"
    android:background="#ccc"
    app:layout_constraintTop_toBottomOf = "@+id/calendarView"
    tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/save_Btn"
        android:layout_width="82dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/roboto_bold"
        android:padding="0dp"
        android:text="완료"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/edge"
        android:layout_width="376dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/round_rectangle" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="어떤 한 달을 보냈나요?"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.04000002" />

    <ScrollView
        android:layout_width="340dp"
        android:layout_height="165dp"
        app:layout_constraintBottom_toBottomOf="@+id/edge"
        app:layout_constraintEnd_toEndOf="@+id/edge"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="@+id/edge"
        app:layout_constraintTop_toTopOf="@+id/edge"
        app:layout_constraintVertical_bias="0.533"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/edge"
            app:layout_constraintEnd_toEndOf="@+id/edge"
            app:layout_constraintStart_toStartOf="@+id/edge"
            app:layout_constraintTop_toTopOf="@+id/memoEditText"
            app:layout_constraintVertical_bias="0.0" />
    </ScrollView>


    <Button
        android:id="@+id/del_Btn"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:text="delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edge"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/memoEditText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#707070"
        android:fontFamily="@font/roboto"
        android:foregroundTint="#FFFFFF"
        android:hint="한 달 회고를 들려주세요."
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/edge"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/edge"
        app:layout_constraintTop_toTopOf="@+id/edge" />

</androidx.constraintlayout.widget.ConstraintLayout>